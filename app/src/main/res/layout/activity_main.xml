<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/mainLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:isScrollContainer="true"
        >

        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="KEYBOARD PUSH"
                android:textColor="#000000"
                android:textSize="22dp"
                />

            <!-- Stop auto focusing the EditText -->
            <!-- Trick to prevent the editText 'number' to take the focus and trigger the keyboard -->
          <!--  <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:focusable="true"
                android:focusableInTouchMode="true">
            </LinearLayout>-->

            <EditText
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/input_field_border"
                android:textSize="20dp"
                android:hint="Number"
                android:textColor="#585858"
                android:singleLine="true"
                />

            <!-- GENDER  -->
            <EditText
                android:id="@+id/sexe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/input_field_border"
                android:textSize="20dp"
                android:hint="Gender"
                android:singleLine="true"
                android:textColor="#585858"
                />

            <!-- NAME  -->
            <EditText
                android:id="@+id/nom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/input_field_border"
                android:textSize="20dp"
                android:hint="Last name"
                android:singleLine="true"
                />

            <!-- FIRST NAME  -->
            <EditText
                android:id="@+id/prenom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/input_field_border"
                android:textSize="20dp"
                android:hint="First name"
                android:singleLine="true"
                />

            <!-- BIRTH CITY  -->
            <EditText
                android:id="@+id/villeNaissance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/input_field_border"
                android:textSize="20dp"
                android:hint="Birth city"
                android:singleLine="true"
                />

            <!-- BIRTH PLACE  -->
            <EditText
                android:id="@+id/departementNaissance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/input_field_border"
                android:textSize="20dp"
                android:hint="Birth place"
                android:singleLine="true"
                />

            <!-- BIRTH DATE  -->
            <EditText
                android:id="@+id/dateNaissance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/input_field_border"
                android:textSize="20dp"
                android:singleLine="true"
                android:editable="false"
                android:hint="Birth date"
                android:textColor="#585858"
                />

            <!--  EXPIRATION  DATE-->
            <EditText
                android:id="@+id/dateExpiration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/input_field_border"
                android:textSize="20dp"
                android:hint="Expiration date"
                android:singleLine="true"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>